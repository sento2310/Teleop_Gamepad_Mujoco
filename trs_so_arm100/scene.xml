<mujoco model="so_arm100 scene">
  <include file="so_arm100.xml"/>

  <statistic center="0 -0.2 0.1" extent="0.4"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="140" elevation="-30"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <!-- removed checker texture to ensure a single flat color -->
    <material name="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2" rgba="0.92 0.92 0.9 1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane" rgba="0.94 0.94 0.94 1"/>
    <body name="cube_body" pos="0.3 0 0.1">
      <freejoint/>
      <!-- dark grey cube -->
      <geom name="cube" type="box" size="0.015 0.015 0.015" rgba="0.3 0.3 1 1" condim="6" friction="1"/>
    </body>

    <body name="small_static_cube" pos="0.2 -0.15 0.005">
      <!-- box half-sizes: 0.025 x 0.025 x 0.005 -> 5cm x 5cm footprint, 1cm tall -->
      <geom name="static_cube" type="box" size="0.025 0.025 0.005" rgba="1 0.3 0.3 1"/>
    </body>

  </worldbody>
</mujoco>
